@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
{
<div class="col-md-6">
    @Html.HiddenFor(x => x.Id)
    <br />
    @Html.Label("Name")
    @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Status")
    @Html.TextAreaFor(x => x.Status, new { @class = "form-control" })
    <br />
    @Html.Label("Creation Date")
    @Html.TextAreaFor(x => x.CreationDate, new { @class = "form-control" })
    <br />

    <button type="submit" class="btn btn-success">Save</button>
    <button class="btn btn-dark">Cancel</button>
</div>

        }

